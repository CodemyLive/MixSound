<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //Style for Horizontal Layouts
    <style name="layout_horizontal_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    //Style for Vertical Layouts
    <style name="layout_vertical_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    //Style for all Texts
    <style name="codeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
    </style>


    //Style for each ImageButton
    <style name="image_record">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_mic</item>
        <item name="android:layout_marginTop">@dimen/image_margin_top</item>
    </style>

    <style name="image_slow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_chipmunk</item>
        <item name="android:layout_marginLeft">@dimen/image_margin</item>
        <item name="android:padding">@dimen/image_padding</item>
    </style>

    <style name="image_darth_vader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_darth_vader</item>
        <item name="android:layout_marginLeft">@dimen/image_margin</item>
        <item name="android:layout_marginRight">@dimen/image_margin</item>
        <item name="android:padding">@dimen/image_padding</item>
    </style>

    <style name="image_reverb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_reverb</item>
        <item name="android:layout_marginLeft">@dimen/image_margin</item>
        <item name="android:padding">@dimen/image_padding</item>
    </style>

    <style name="image_fast">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_rabbit</item>
        <item name="android:layout_marginLeft">@dimen/image_margin</item>
        <item name="android:layout_marginRight">@dimen/image_margin</item>
        <item name="android:padding">@dimen/image_padding</item>
    </style>




</resources>
